{
  "name": "lesson12",
  "version": "1.0.0",
  "description": "Nodemailer pub",
  "main": "index.ts",
  "scripts": {
    "start": "rimraf dist && copyfiles -f \"./src/email-templates/*.*\" ./dist/email-templates && tsc-watch --onSuccess \"npm run watch:server\"",
    "watch:server": "nodemon \"./src/app.ts\" --watch ./src",
    "lint": "eslint --cache --ext .js,.ts src",
    "lint:fix": "npm run lint -- --fix",
    "typeorm": "node -r ts-node/register ./node_modules/typeorm/cli.js",
    "migration:generate": "typeorm migration:create -n AddAccessTokenColumnMigration",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "email-templates": "^10.0.1",
    "express": "^4.18.2",
    "express-handlebars": "^6.0.6",
    "joi": "^17.7.0",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.8.0",
    "pg": "^8.8.0",
    "pug": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.45"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/email-templates": "^10.0.1",
    "@types/express": "^4.17.14",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.9",
    "@types/nodemailer": "^6.4.6",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.27.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "nodemon": "^2.0.20",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3"
  }
}
